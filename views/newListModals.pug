div(class="modal fade", id="newListModal", role="dialog")
    div.modal-dialog
        div.modal-content
            div.modal-header
                button(type="button", class="close" data-dismiss="modal") &times;
                h4.modal-title
                    | Create New List
            div.modal-body
                form(action="/manage/createNewList", method="POST", id="newListForm")
                    label
                        | List Name:
                    input(type="text", name="listname", id="listname")
            div.modal-footer
                button(type="button",class="btn btn-default",onclick="getElementById('newListForm').submit()") Submit
                button(type="button",class="btn btn-default",data-dismiss="modal") Close