extends layout

mixin genlist(item)
  tr
    td.
      #{item.restaurant_name}
    td.
      #{item.address}
script(type="text/script", src="../public/javascript/createDataTable.js")
block content
  div.container
    h2 #{title}
    table(class="table table-bordered", id="example")
      thead
        tr
          th
            | restaurant name
          th 
            | address
      tbody
        for item in res_list
          +genlist(item)
    
